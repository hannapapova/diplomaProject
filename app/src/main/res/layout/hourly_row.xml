<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp">

    <TextView
        android:id="@+id/tv_hourly_time"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="14:00"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_hourly_icon"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/rain"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@id/tv_hourly_time"
        app:layout_constraintStart_toStartOf="@id/tv_hourly_time"
        app:layout_constraintEnd_toEndOf="@id/tv_hourly_time"/>

    <TextView
        android:id="@+id/tv_hourly_temperature"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="+10Â°C"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/iv_hourly_icon"
        app:layout_constraintStart_toStartOf="@id/tv_hourly_time"
        app:layout_constraintEnd_toEndOf="@id/tv_hourly_time"/>

</androidx.constraintlayout.widget.ConstraintLayout>